<EditForm Model="MyTask" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label>Descripción:</label>
        <div>
            <InputText class="form-control" @bind-Value="@MyTask.Description" />
            <ValidationMessage For="@(() => MyTask.Description)" />
        </div>
    </div>

    <div class="mb-3">
        <label>Fecha:</label>
        <div>
            <InputDate class="form-control" @bind-Value="@MyTask.Date" />
            <ValidationMessage For="@(() => MyTask.Date)" />
        </div>
    </div>

    <button class="btn btn-sm btn-outline-primary" type="submit"><i class="bi bi-floppy" /> Grabar</button>
    <button class="btn btn-sm btn-outline-success" @onclick="ReturnAction"><i class="bi bi-arrow-left" /> Volver</button>
</EditForm>

@code {
    [EditorRequired, Parameter] public MyTask MyTask { get; set; } = null!;
    [EditorRequired, Parameter] public EventCallback OnValidSubmit { get; set; }
    [EditorRequired, Parameter] public EventCallback ReturnAction { get; set; }

}
